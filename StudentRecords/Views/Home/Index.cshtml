@using StudentRecords.Models

@model IEnumerable<StudentRecords.Models.Class1>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <br />
    @Html.DropDownList("CourseList", ViewBag.CourseList as SelectList, new { @id = "SelectedValue" })

    <p></p>

    <table border="1">
        <tr>
            <th>Student Id</th>
            <th>Student Name</th>
            <th>Student Course</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.StudentName</td>
                <td>@item.StudentCourse</td>
                <td>
                    @Html.RouteLink("Edit1", "Edit", new { id = @item.Id })
                    @Html.RouteLink("Delete1", "Delete", new { id = @item.Id })
                </td>
            </tr>
        }

    </table><br /><br />

    <input id="sum1" placeholder="Enter Num 1" required />
    <input id="sum2" placeholder="Enter Num 2" required />
    <button name="sum" id="sum" onclick="sum()">+</button>
    <input id="sum3" placeholder="Result" readonly />
    <p></p>

    <input id="mul1" placeholder="Enter Num 1" required />
    <input id="mul2" placeholder="Enter Num 2" required />
    <button name="mul" id="mul" onclick="mul()">*</button>
    <input id="mul3" placeholder="Result" readonly />
    <p></p>

    <input id="sub1" placeholder="Enter Num 1" required />
    <input id="sub2" placeholder="Enter Num 2" required />
    <button name="sub" id="sub" onclick="sub()">-</button>
    <input id="sub3" placeholder="Result" readonly />
    <p></p>


<script type="text/javascript">
    function sum() {
        var num1 = parseInt(document.getElementById("sum1").value);
        var num2 = parseInt(document.getElementById("sum2").value);
        var res = num1 + num2;

        document.getElementById("sum3").value = res;
    }

    function sub() {
        var num1 = parseInt(document.getElementById("sub1").value);
        var num2 = parseInt(document.getElementById("sub2").value);
        var res = num1 - num2;

        document.getElementById("sub3").value = res;
    }

    function mul() {
        var num1 = parseInt(document.getElementById("mul1").value);
        var num2 = parseInt(document.getElementById("mul2").value);
        var res = num1 * num2;

        document.getElementById("mul3").value = res;
    }

    $("#SelectedValue").change(function () {
        var val = $(this).val();
        window.location = "/Home/Filter?course=" + val;
    })

    $(document).ready(function () {
        var course = '@(ViewBag.SelectCourse)';
        if (course) {

            $("#SelectedValue").val(course);
        }
    });



</script>
