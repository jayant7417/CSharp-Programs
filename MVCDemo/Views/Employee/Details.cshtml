@model MVCDemo.Models.Employee

@{
    ViewBag.Title = "Details";
}

<head>
    <style>
        .mydiv {
            background-color: crimson;
            padding: 5px 5px;
            width: 40px;
            border-radius: 15%;
            font-size: 20px;
            margin-left: 10px;
        }
    </style>
</head>
<div class="mydiv">
    @Html.ActionLink("Back", "Index", "Employee", new { departmentId = Model.DepartmentId }, null)
</div>
<h2>Employee Details</h2>
<table style="font-family: Arial" border="2">
    <tr>
        <td><b>Employee Id : </b></td>
        <td>@Model.EmployeeId</td>
    </tr>
    <tr>
        <td><b>Employee Name : </b></td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td><b>Gender : </b></td>
        <td>@Model.Gender</td>
    </tr>
    <tr>
        <td><b>City : </b></td>
        <td>@Model.City</td>
    </tr>
</table>

