@model StudentsMVC.Models.Student
@{
    ViewBag.Title = "Index";
}
<head>
    <style>
        .form-group {
            margin-top: 5%;
        }
    </style>
    <script src="~/JQuery/myScript.js"></script>
</head>
<center>
    <table style="border-spacing: 2cm 2em; border-collapse: separate;">
        <tr>
            <!--Students List Section-->
            <td style="width: 50%;">
                <h2>Students Record</h2>
                <select id="ddlCourses" name="Course">
                    <option value="0">All</option>
                </select>

                <button id="btnload">Students List</button>

                <table border="1">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>City</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="mydata"></tbody>
                </table>
            </td>
            <!--Edit Section-->
            <td style="width: 50%; display: none;" id="editsection">
                <form id="registerFormId">
                    <h2>Edit Student Details</h2>
                    <div class="form-group">

                        <input type="hidden" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name : </label>
                        @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", @id = "Name", @placeholder = "Name" })
                    </div>
                    <div class="form-group">
                        <label for="City">City : </label>
                        @Html.TextBoxFor(model => model.City, htmlAttributes: new { @class = "form-control", @id = "City", @placeholder = "City" })
                    </div><br />

                </form>
                <button name="Save" id="btnSave">Save</button>


            </td>
        </tr>
    </table>
</center>